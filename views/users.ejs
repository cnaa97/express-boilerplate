<!DOCTYPE html>
<html>
  <head>
    <title>ÏÇ¨Ïö©Ïûê Ï†ïÎ≥¥</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
        <div class="row mb-3">
            <h1>ÏÇ¨Ïö©Ïûê Ï†ïÎ≥¥</h1>
        </div>
        <div class="row">
            <div class="col-4">
                <form>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="comment">About</label>
                        <input type="text" class="form-control" id="comment">
                    </div>
                    <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">About</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>

        function getUsers () {
            $.get('/api/users', (data) => {
                var $tbody = $('#tbody');
                $tbody.empty();
                data.forEach((item) => {
                    var $tr = $('<tr />');
                    $('<td />').attr('scope', 'row').text(item.id).appendTo($tr);
                    $('<td />').text(item.name).appendTo($tr);
                    $('<td />').text(item.email).appendTo($tr);
                    $('<td />').text(item.comment).appendTo($tr);
                    $('<td />').text('üóë').click(function(){ deleteUser(item.id) }).appendTo($tr);
                    $tbody.append($tr);
                });
            });
        }

        function putUser(id) {
            $.ajax({
                url: '/api/user/' + id,
                type: 'PUT',
                data: {
                    name: $('#name').val(),
                    email: $('#email').val(),
                    comment: $('#comment').val(),    
                },
                success: function(res){
                    console.log(res);
                    getUsers();
                },
            })
        }

        function postUser () {
            $.post('/api/user', {
                name: $('#name').val(),
                email: $('#email').val(),
                comment: $('#comment').val(),
            }, (res) => {
                // console.log(res);
                getUsers();
                $('input').val('');
            })
        }
        
        function deleteUser (id) {
            $.ajax({
                url: '/api/user/' + id,
                type: 'DELETE',
                success: function(res){
                    console.log(res);
                    getUsers();
                },
            })
        }

        (function(){
            getUsers();

            $('#submit').click((e) => {
                e.preventDefault();
                postUser();
            })

        })();
    </script>
  </body>
</html>
